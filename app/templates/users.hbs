<div class="segment container is-spaced">
  {{#bulma-nav}}
    <div class="nav-left">
    </div>

    <div class="nav-center">
      <span class="nav-item is-brand">Users</span>
    </div>

    <div class="nav-right nav-menu"></div>
  {{/bulma-nav}}
  <hr />

  {{#if model}}
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Activation</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
          {{list/user-item user onNotify=(action 'notifyUser')}}
        {{/each}}
      </tbody>
    </table>
  {{else}}
    No users available.
  {{/if}}
</div>
