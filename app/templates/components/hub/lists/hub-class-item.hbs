<div class="class__card">
  <div class="class__times">
    {{#each @model.times as |t|}}
      {{time t.start 'h:mma'}}-{{time t.end 'h:mma'}} {{time t.start 'M/D/YY'}}
    {{/each}}
    {{#if @model.seats}}
      <span class="right floated">{{@model.seats}} spots left</span>
    {{else}}
      <span class="right floated">class is full</span>
    {{/if}}
  </div>

  <div class="header class__name">
    {{@model.classInformation.name}}
    <span class="class-name__organization">
      by {{@model.organization}}
    </span>
  </div>
  <div class="class__location">
    <i class="fa fa-map-marker"></i> {{@model.location.name}}
    <EmberTooltip @side="left">
      {{@model.location.address.line1}} <br>
      {{@model.location.address.city}}, {{@model.location.address.state}} {{@model.location.address.zipcode}} <br>
      {{@model.location.address.directions}}
    </EmberTooltip>
  </div>
  <div class="class__instructor">
    Instructor: {{@model.instructor.displayName}}
    Email: <a href="mailto:{{@model.instructor.email}}?Subject={{@model.classInformation.name}}" target="_top">{{@model.instructor.email}}</a>
      <EmberTooltip @side="left">
        Company: {{@model.instructor.organization}} <br>
        Phone: {{@model.instructor.phone}} <br>
      </EmberTooltip>
      <span class="right floated"> $5,000{{@model.cost}}</span>
  </div>
</div>
