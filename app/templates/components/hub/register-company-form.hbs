<BulmaControl>
  <label for="email">
    Email
    <i class="fa fa-info-circle right floated">
      <EmberTooltip @popperContainer='.ember-application'>
        Pricing will automatically update if you are an AE/MSSC member
      </EmberTooltip>
    </i>
  </label>
  <BulmaInput
    type="email"
    id="email"
    placeholder="Email Address"
    isLoading={{this.isFetchingMember}}
    @oninput={{pipe (set @model.email (get _ "target.value")) this.updatedEmail}}
  />
</BulmaControl>

{{#if this.memberStatus.memberOfOneOrg}}
  <div class="notification is-success">
    <i class="fa fa-check"></i> You are a member of {{this.memberString}}.
  </div>
{{/if}}

<BulmaControl>
  <label for="company-name">Company Name</label>
  <BulmaInput
    type="text"
    id="company-name"
    placeholder="Company Name"
    @value={{this.companyName}}
    @oninput={{set this.companyName (get _ "target.value")}}
  />
</BulmaControl>


<BulmaControl>
  <label for="company-addr-line1">Street Address</label>
  <BulmaInput
    type="text"
    id="company-addr-line1"
    placeholder="Company Street Address"
    @value={{this.companyAddressLine1}}
    @oninput={{set this.companyAddressLine1 (get _ "target.value")}}
  />
</BulmaControl>

<BulmaControl>
  <label for="company-addr-line2">Apt/Suite (Optional)</label>
  <BulmaInput
    type="text"
    id="company-addr-line2"
    placeholder="Company Apt/Suite"
    @value={{this.companyAddressLine2}}
    @oninput={{set this.companyAddressLine2 (get _ "target.value")}}
  />
</BulmaControl>

<div class="columns">
  <BulmaControl class="column">
    <label for="company-addr-city">City</label>
    <BulmaInput
      type="text"
      id="company-addr-city"
      placeholder="Company City"
      @value={{this.companyAddressCity}}
      @oninput={{set this.companyAddressCity (get _ "target.value")}}
    />
  </BulmaControl>

  <BulmaControl class="column is-expanded">
    <label for="company-addr-state">State</label>

    <div class="select is-fullwidth">
      <select
        {{on "change" (set this.companyAddressState (get _ "target.value"))}}
      >
        {{#each this.states as |state|}}
          <option value="{{state.value}}" selected={{if (eq this.companyAddressState state.value) true false}}>
            {{state.label}}
          </option>
        {{/each}}
      </select>
    </div>
  </BulmaControl>

  <BulmaControl class="column">
    <label for="company-addr-zipcode">Zipcode</label>
    <BulmaInput
      type="text"
      id="company-addr-zipcode"
      placeholder="Company Zipcode"
      @value={{this.companyAddressZipcode}}
      @oninput={{set this.companyAddressZipcode (get _ "target.value")}}
    />
  </BulmaControl>
</div>

<BulmaControl>
  <label for="company-po">Purchase Order # (Optional)</label>
  <BulmaInput
    type="text"
    id="company-po"
    placeholder="Purchase Order #"
    @oninput={{set @model.po (get _ "target.value")}}
  />
</BulmaControl>

<Form::ActionButton
  type="submit"
  class="button is-large is-success is-fullwidth"
  {{!-- loading=working --}}
  {{!-- disabled=(or (not password) (not (eq password passwordConfirm)))> --}}
>
  Save Company Information
</Form::ActionButton>

