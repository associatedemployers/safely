{{#if model}}
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Hours</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |class|}}
        {{list/class-item class onDelete=(action 'delete')}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  No classes available.
{{/if}}
<hr />
<p>
  {{#link-to 'classes.blackouts'}}
    <i class="fa fa-fw fa-plus"></i> Add class blackout date
  {{/link-to}}
</p>
