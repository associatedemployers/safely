<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <section class="section">
      <h2 class="has-text-centered">Hi, {{model.name.first}}!</h2>
      <h4 class="has-text-centered">Set a password to activate your account.</h4>
    </section>

    <div class="login__card--container">
      <div class="card-content">
        <form {{action "activate" on="submit"}}>
          {{#bulma-control}}
            <label for="password">Password</label>
            {{bulma-input type="password" id="password" class="is-large" placeholder="Set a password" oninput=(action (mut password) value='target.value')}}
          {{/bulma-control}}

          {{#bulma-control}}
            <label for="password-confirm">Confirm Password</label>
            {{bulma-input type="password" id="password-confirm" class="is-large" placeholder="Confirm your password" oninput=(action (mut passwordConfirm) value='target.value')}}
          {{/bulma-control}}
          <hr />

          {{#form/action-button
            type="submit"
            class="button is-large is-success is-fullwidth"
            loading=working
            disabled=(or (not password) (not (eq password passwordConfirm)))}}
              Log In
          {{/form/action-button}}
        </form>
      </div>
    </div>
  </div>
</div>
